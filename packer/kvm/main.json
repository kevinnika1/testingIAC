{
    "builders": [
        {
            "type": "qemu",
            "disk_size": "{{ user `disk_size` }}",
            "headless": "{{ user `headless` }}",
            "iso_urls": [
                "{{ user `iso_url` }}"
            ],
            "disk_image": true,
            "disk_compression": true,
            "iso_checksum_url": "{{ user `iso_checksum_url` }}",
            "iso_checksum_type": "none",
            "output_directory": "output-{{ user `vm_name` }}",
            "shutdown_command": "echo '{{ user `ssh_password` }}' | sudo -S shutdown -P now",
            "ssh_password": "{{ user `ssh_password` }}",
            "ssh_username": "{{ user `ssh_username` }}",
            "ssh_wait_timeout": "10000s",
            "vm_name": "{{ user `vm_name` }}",
            "qemuargs": [
                [ "-m", "{{ user `memory` }}" ],
                [ "-smp", "cpus={{ user `cpus`}}"]
            ]
        }
    ],
    "provisioners": [
        {
            "type": "ansible",
            "playbook_file": "{{ template_dir }}/../../ansible/dummy-server.yml",
            "ansible_env_vars": ["ANSIBLE_CONFIG={{ template_dir }}/../../ansible/ansible.cfg"],
            "extra_arguments": [
                "--extra-vars", "{'ansible_become_pass': {{ user `ssh_password` }}, 'nginx': {'systemd': false, 'become': true}, 'dummy': {'systemd': true, 'port': {{ user `dummy_server_port` }}, 'become': true}}",
                "--diff"
            ]
        }
    ],
    "post-processors": [
        {
            "type": "manifest",
            "output": "output-{{ user `vm_name` }}/manifest.json",
            "strip_path": true
        }
    ],
    "variables": {
        "dummy_server_port": null,
        "cpus": "1",
        "disk_size": "65536",
        "headless": "",
        "memory": "512",
        "ssh_password": "ubuntu",
        "ssh_username": "ubuntu",
        "vm_name": "ubuntu-main",
        "iso_checksum_url": "file://output-ubuntu-base/ubuntu-base_sha256.checksum",
        "iso_url": "./output-ubuntu-base/ubuntu-base"
    }
}
